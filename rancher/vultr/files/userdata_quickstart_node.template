#!/bin/bash -x

#${register_command} --etcd --controlplane --worker

publicIP="$(curl https://ipinfo.io/ip 2>/dev/null)";
privateIP="$(ip -4 -o -br addr|awk '$0 ~ /^[we]\w+\s+UP\s+/ {str = gsub("/[1-9][0-9]*", "", $0); print $3}' | grep -v $publicIP)"

${register_command} --address $publicIP --internal-address $privateIP --etcd --controlplane --worker

